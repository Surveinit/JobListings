<h1 class="text-3xl font-bold tracking-tight text-gray-900">Create Job</h1>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="PostedDate" />
    
    <div class="space-y-12">
        <div class="border-b border-gray-900/10 pb-12">
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

                <div class="sm:col-span-4">
                    <label asp-for="Title" class="block text-sm/6 font-medium text-gray-900">Title</label>
                    <div class="mt-2">
                        <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                            <input asp-for="Title" 
                                   class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"  
                                   placeholder="Web Developer Intern"/>
                        </div>
                    </div>
                </div>

                <div class="sm:col-span-4">
                    <label asp-for="Company" class="block text-sm/6 font-medium text-gray-900">Company</label>
                    <div class="mt-2">
                        <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                            <input asp-for="Company" 
                                   class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"  
                                   placeholder="Google"/>
                        </div>
                    </div>
                </div>
                
                <div class="sm:col-span-4">
                    <label asp-for="Location" class="block text-sm/6 font-medium text-gray-900">Location</label>
                    <div class="mt-2">
                        <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                            <input asp-for="Location" 
                                   class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"  
                                   placeholder="Mumbai, India"/>
                        </div>
                    </div>
                </div>
                
                <div class="sm:col-span-4">
                    <label asp-for="Description" class="block text-sm/6 font-medium text-gray-900">Description</label>
                    <div class="mt-2">
                        <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                            <textarea asp-for="Description" 
                                   class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6 focus:ring-indigo-500 rounded h-32"  
                                   placeholder="Something about Job profile."></textarea>
                        </div>
                    </div>
                </div>
                
                <div class="sm:col-span-4">
                    <label asp-for="Salary" class="block text-sm/6 font-medium text-gray-900">Salary</label>
                    <div class="mt-2">
                        <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                            <input asp-for="Salary" 
                                   class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6 focus:ring-indigo-500 rounded"  
                                   placeholder="40000000"/>
                        </div>
                    </div>
                </div>
                
                <div class="sm:col-span-4">
                    <label asp-for="JobType" class="block text-sm/6 font-medium text-gray-900">Job Type</label>
                    <div class="mt-2">
                        <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                            <select asp-for="JobType" 
                                    class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 bg-white focus:outline-none sm:text-sm/6 placeholder:text-gray-400 focus:ring-indigo-500 rounded">
                                <option value="Full-time">Full-time</option>
                                <option value="Part-time">Part-time</option>
                                <option value="Contract">Contract</option>
                                <option value="Internship">Internship</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="sm:col-span-4">
                    <label asp-for="IsActive" class="block text-sm/6 font-medium text-gray-900">Status</label>
                    <div class="mt-2">
                        <div class="flex items-center gap-3 rounded-md bg-white pl-3 pr-3 py-2 outline outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                            <input asp-for="IsActive" type="checkbox"
                                class="h-5 w-5 text-indigo-600 border-gray-300 focus:ring-indigo-500 rounded"/>
                                <span class="text-base text-gray-700">Active</span>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>

        <div class="mt-6 flex items-center justify-between gap-x-6">
            <div class="flex items-center gap-x-6">
                <a asp-action="Index" type="button" class="text-sm/6 font-semibold text-gray-900">Cancel</a>
                <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Create</button>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
